{
  "serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Information"
    },
    "WriteTo": [
      { "Name": "Console" }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "FiatChamp"
    }
  },
  "app": {
    "fakeApi": false,
    "refreshInterval": "15",
    "carUnknownLocation": "away",
    "startDelaySeconds": 1,
    "autoRefreshLocation": false,
    "autoRefreshBattery": false,
    "enableDangerousCommands": false,
    "convertKmToMiles": false
  },
  "fiat": {
    "brand": "Fiat",
    "region": "Europe",
    "user": "",
    "password": "",
    "pin": ""
  },
  "ha": {
    "api": {
      "url": "http://supervisor/core",
      "token": ""
    },
    "mqtt": {
      "server": "",
      "port": 1883,
      "useTls": false,
      "clientId": "FiatChamp",
      "user": "",
      "password": ""
    }
  }
}